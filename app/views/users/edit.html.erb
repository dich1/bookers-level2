<main>
	<p id="notice"><%= notice %></p>
	<div class="container px-5 px-sm-0">
		<div class="row">
			<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
			<h2>User info</h2>
				<div class="form-body">
					<%= form_for(@user) do |f| %>
						<% if @user.errors.any? %>
								<div class=“alert alert-warning”>
								  <ul>
									<% @user.errors.full_messages.each do |message| %>
										<li><%= message %></li>
									<% end %>
								  </ul>
								</div>
						<% end %>
						<div class="form-group">
							<label for="user_name">Name</label><%= f.text_field :name, class: "form-control name" %> <!-- 自動で名前入ってる機能 -->
						</div>
						<div class="field">
							<label for="user_image">Image</label><br><%= f.attachment_field :profile_image, class: "user-edit-form" %>
						</div>
						<div class="form-group">
							<label for="user_introduction">Introduction</label><%= f.text_area :introduction, class: "form-control introduction" %>
						</div>
						<p><%= f.submit "Update User", class: "btn btn-secondary" %></p>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</main>